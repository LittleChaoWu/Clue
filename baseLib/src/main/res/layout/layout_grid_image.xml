<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_f0"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:text="@string/image_or_video_record_title"
        android:textColor="@color/gray_98"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/add_attachment"
        android:visibility="gone" />

    <com.sfb.baselib.widget.pulltorefrsh.RecyclerListView
        android:id="@+id/mRecyclerListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_manager="grid"
        app:span_count="3" />

</LinearLayout>