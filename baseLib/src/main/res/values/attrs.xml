<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingView">
        <attr name="loading_text" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RecyclerListView">
        <attr name="layout_manager">
            <flag name="linear" value="1" />
            <flag name="grid" value="2" />
        </attr>
        <attr name="span_count" format="integer" />
        <attr name="has_divider" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SearchTypeView">
        <attr name="search_type" format="string" />
        <attr name="search_icon" format="reference" />
        <attr name="show_linear" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LinearView">
        <attr name="linear_type">
            <enum name="type_of_text" value="1" />
            <enum name="type_of_add_child" value="2" />
        </attr>
        <attr name="linear_background" format="reference" />
        <attr name="linear_catalog" format="string|reference" />
        <attr name="linear_title" format="string|reference" />
        <attr name="linear_content" format="string|reference" />
        <attr name="linear_hint" format="string|reference" />
        <attr name="linear_suffix" format="string|reference" />
        <attr name="linear_title_color" format="color|reference" />
        <attr name="linear_content_color" format="color|reference" />
        <attr name="linear_suffix_color" format="color|reference" />
        <attr name="linear_title_size" format="integer" />
        <attr name="linear_content_size" format="integer" />
        <attr name="linear_suffix_size" format="integer" />
        <attr name="linear_content_height" format="dimension" />
        <attr name="linear_suffix_box" format="boolean" />
        <attr name="linear_required" format="boolean" />
        <attr name="linear_input_able" format="boolean" />
        <attr name="linear_item_is_detail" format="boolean" />
        <attr name="linear_max_length" format="integer" />
        <attr name="linear_header_image" format="reference" />
        <attr name="linear_first_image" format="reference" />
        <attr name="linear_second_image" format="reference" />
        <attr name="linear_image_size" format="dimension" />
        <attr name="linear_image_padding" format="dimension" />
        <attr name="linear_padding_left" format="dimension" />
        <attr name="linear_padding_right" format="dimension" />
        <attr name="linear_padding_top" format="dimension" />
        <attr name="linear_padding_bottom" format="dimension" />
        <attr name="linear_title_gravity">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
            <enum name="center" value="5" />
        </attr>
        <attr name="linear_content_gravity">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
            <enum name="center" value="5" />
        </attr>
    </declare-styleable>

    <declare-styleable name="GridImageView">
        <attr name="catalog" format="string" />
        <attr name="title" format="string" />
        <attr name="mode" format="integer">
            <enum name="mode_add" value="1" />
            <enum name="mode_detail" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="progress" format="integer" />
        <attr name="max" format="integer" />
        <attr name="progress_width" format="integer" />
        <attr name="default_color" format="color|reference" />
        <attr name="progress_color" format="color|reference" />
        <attr name="text_color" format="color|reference" />
        <attr name="text_size" format="float" />
    </declare-styleable>

    <declare-styleable name="ProgressWheel">
        <attr name="progressIndeterminate" format="boolean" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="float" />
        <attr name="barSpinCycleTime" format="integer" />
        <attr name="circleRadius" format="dimension" />
        <attr name="fillRadius" format="boolean" />
        <attr name="barWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="open_color" format="color" />
        <attr name="close_color" format="color" />
        <attr name="isOpen" format="boolean" />
        <attr name="shape">
            <enum name="rect" value="1" />
            <enum name="circle" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="Banner">
        <attr name="banner_loop_time" format="integer" />
        <attr name="banner_auto_loop" format="boolean" />
        <attr name="banner_infinite_loop" format="boolean" />

        <!--RoundLinesIndicator、RectangleIndicator-->
        <attr name="banner_indicator_height" format="dimension"/>
        <attr name="banner_indicator_radius" format="dimension"/>

        <!-- 以下为公用属性 -->
        <attr name="banner_indicator_selected_width" format="dimension"/>
        <!--CircleIndicator-->
        <attr name="banner_indicator_normal_width" format="dimension"/>
        <attr name="banner_indicator_space" format="dimension"/>

        <attr name="banner_indicator_normal_color" format="reference|color"/>
        <attr name="banner_indicator_selected_color" format="reference|color"/>
        <attr name="banner_indicator_margin" format="dimension"/>
        <attr name="banner_indicator_marginLeft" format="dimension"/>
        <attr name="banner_indicator_marginTop" format="dimension"/>
        <attr name="banner_indicator_marginRight" format="dimension"/>
        <attr name="banner_indicator_marginBottom" format="dimension"/>

        <attr name="banner_indicator_gravity" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>

        <attr name="banner_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="banner_radius" format="dimension"/>

    </declare-styleable>
</resources>